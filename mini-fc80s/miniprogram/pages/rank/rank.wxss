.general {
  font-size: 14px;
  font-weight:600;
}

.topFixed {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  padding-top: auto;
  z-index: 100;
}

.addTeam {
  background: white;
  display: flex;
  align-items: center;
  border: 1rpx solid #e0e0e0;
  box-shadow: 0 0 5rpx #e0e0e0;
  margin-bottom: 5rpx;
  padding: 10rpx;
}

.plus {
  width: 41rpx;
  height: 41rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.header {
  flex: 1;
  font-size: 28rpx;
}

/* 排行榜 */
.titleGroup {
    display: flex;
    flex-direction: row;
}

.titleTeam {
  width:20%;
  height: 50rpx;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid black;
  /* background: mediumaquamarine; */
  background: #f3c705fa;
}

.title {
  width:11%;
  height: 50rpx;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid black;
  /* background: mediumaquamarine; */
  background: #f3c705fa;
}

.contentGroup {
  display: flex;
  flex-direction: row;
}

.contentTeam {
  width:20%;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid black;
  background: ghostwhite;
}


/* 球队积分信息 */
.content {
  width:11%;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid black;
  background: ghostwhite;
}

/* 占位 将 按钮 和 比赛 挤下去 */
.placeholder {
  height: 365rpx;
  background: white;
}

.btnBox {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 5rpx;
}

/* 按键行 */
.start {
  width: 100rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  padding-right: 150rpx;
}

.reset {
  width: 100rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  padding-left: 150rpx;
}

.register {
  width: 100rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  /* padding-left: 150rpx; */
}

/* 对战表的格式 */
.matches {
    display: flex;
    flex-direction: column;
    /* padding-top: 154px; */
}


.roundBox {
  border: 1px solid black;
  /* width: 100%; */
}

.versus {
  /* width: 100%; */
  height: 20pt;
  display: flex;
  /* align-items: center; */
  justify-content: center;             /* justify-content: 将内部元素居中 */
  /* background:gainsboro; */
  border: 0.5px dashed grey;
  background: ghostwhite;
  padding-top: 1%;
}

/* 比分框-比分框元素 */
.input {
  width: 30%;
  height: 20pt;
  display: flex;
  position: absolute;
  /* align-items: left; */
  justify-content: center;
  /* background:gainsboro; */
  background: ghostwhite;
}

.scoreInput {
  width: 35%;
  height: 18pt;
  /* background:mediumaquamarine; */
  background: #f3c705fa;
  text-align: center;
  z-index: 1;
}

.homeTeam {
  /* float: left; */
  width: 60%;
}
