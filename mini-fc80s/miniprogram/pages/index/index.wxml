<!-- <view>p_is_ready: {{p_is_ready}}</view> -->
<view wx:if="{{p_is_ready == true}}" class="p_is_ready">
    <!-- 头部 -->
    <view class="ui-header">
        <view class="weui-flex">
            <view class="ui-avatar">
                <open-data type="userAvatarUrl"></open-data>
            </view>
            <view class="weui-flex__item">
                <view class="ui-nickname">
                    <open-data type="userNickName"></open-data>
                </view>
            </view>
        </view>
    </view>

    <div class="weui-flex">
        <div class="weui-flex__item"><div class="placeholder">活动: {{ p_user_profile.activities }}</div></div>
        <div class="weui-flex__item"><div class="placeholder">比赛: {{ p_user_profile.matches }}</div></div>
    </div>

    <!-- radar chart -->
    <view class='radarContainer'>
        <canvas class='radarCanvas' canvas-id='radarCanvas'></canvas>
    </view>

</view>    <!-- end of wx:if-->

<view wx:else class="p_is_ready">
    <button wx:if="{{p_can_use}}" open-type='getUserInfo' lang="zh_CN" bindgetuserinfo="onGotUserInfo">授权登录</button>
    <view wx:else>请升级微信版本</view>
</view>
